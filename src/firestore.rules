
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }

    /**
     * @description   Manages admin user records. Critical for controlling access to admin registration.
     * @path          /admins/{adminId}
     * @allow create:  Only if there are no admins registered yet. This is the main security gate.
     * @allow get:     Only an admin can get another admin's document.
     * @allow list, write:   Only admins can list or write.
     */
     match /admins/{adminId} {
        // This is the most critical rule. It allows a document to be created ONLY if the collection is completely empty.
        // The `size(get(...)) == 0` is the key. `limit: 1` makes the check very efficient.
        // It also ensures a user can only create a document for their own UID.
        allow create: if request.auth.uid == adminId && size(get(/databases/$(database)/documents/admins, {"limit": 1})) == 0;
        allow get, list, write: if isAdmin();
    }

    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
