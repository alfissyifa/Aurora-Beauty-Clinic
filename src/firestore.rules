
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Manages admin user records.
     * The `create` rule is a special case to allow ONLY the first admin to register.
     * Once an admin exists, this `create` rule will fail because the collection size is no longer 0.
     * Subsequent reads/writes are restricted to existing admins via the `isAdmin()` function.
     */
    match /admins/{adminId} {
      allow create: if isSignedIn() && request.auth.uid == adminId && size(get(/databases/$(database)/documents/admins).data) == 0;
      allow read, update, delete: if isAdmin();
      // No list permission is granted to non-admins. The create rule works around this.
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }

    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
