
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }

    /**
     * @description Manages admin user records.
     * This rule allows the very first admin to be created by anyone, but only if the
     * 'admins' collection is completely empty. Subsequent creations are blocked.
     * The 'list' rule is public to allow the client to check if any admins exist.
     */
     match /admins/{adminId} {
        // Allow create only if the collection is empty. This is the key for the first admin registration.
        allow create: if size(get(/databases/$(database)/documents/admins).data) == 0;
        
        // Allow anyone to check if there are admins. This is safe and needed for the UI to hide the register button.
        allow list: if true;
        
        // Only other admins can read, update, or delete admin documents.
        allow get, update, delete: if isAdmin();
    }

    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
