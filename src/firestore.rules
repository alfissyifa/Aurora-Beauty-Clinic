rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the authenticated user is an admin
    // An admin is a user who has a document in the 'xxadminxx' collection
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/xxadminxx/$(request.auth.uid));
    }

    // Rules for the admin collection
    match /xxadminxx/{adminId} {
      // Any signed-in user can create their own admin document, but cannot create for others.
      // This allows the first user, or any subsequent user, to become an admin.
      allow create: if isSignedIn() && request.auth.uid == adminId;
      
      // An admin can only read or update their own document.
      allow get, update: if isSignedIn() && request.auth.uid == adminId;

      // Listing all admin documents is not allowed for security reasons.
      // Deleting admins from the client is disallowed.
      allow list, delete: if false;
    }

    // Rules for public-read collections (Services, Testimonials, etc.)
    match /services/{serviceId} {
      allow read: if true; // Anyone can read services
      allow write: if isAdmin(); // Only admins can create, update, or delete services
    }
    match /testimonials/{testimonialId} {
      allow read: if true; // Anyone can read testimonials
      allow write: if isAdmin(); // Only admins can manage testimonials
    }
    match /pages/{pageId} {
      allow read: if true; // Anyone can read page content
      allow write: if isAdmin(); // Only admins can edit page content
    }
    match /doctors/{doctorId} {
      allow read: if true; // Anyone can read doctor profiles
      allow write: if isAdmin(); // Only admins can manage doctor profiles
    }
    
    // =========================
    // âœ… GALLERY (WAJIB DITAMBAHKAN)
    // =========================
    match /gallery/{galleryId} {
      allow get, list: if true;              // Publik boleh lihat
      allow create, update, delete: if isAdmin();  // Hanya admin
    }

    // Rules for appointments collection
    match /appointments/{appointmentId} {
      // Allow anyone to CREATE a new appointment (booking form).
      allow create: if true;

      // Only admins can READ, UPDATE (e.g., change status), or DELETE appointments.
      allow read, update, delete: if isAdmin();
    }
    
    // Rules for general users collection
    match /users/{userId} {
      // A user can only create, read or write to their own document.
      allow create, read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
