
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }

    /**
     * @description Manages admin user records.
     * This rule allows a user to create an admin document for their own UID,
     * but ONLY if that document does not already exist. This effectively allows
     * any number of users to become admins initially, but the application logic
     * will only show the registration form if the admins collection is empty,
     * thus practically limiting it to one admin. Subsequent reads/writes are restricted to admins.
     */
     match /admins/{adminId} {
        allow create: if request.auth.uid == adminId && !exists(/databases/$(database)/documents/admins/$(adminId));
        allow list: if true; // Allow client to check if admins exist
        allow get, update, delete: if isAdmin();
    }


    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
