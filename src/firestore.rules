
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }

    /**
     * @description   Manages admin user records. Critical for controlling access to admin registration.
     * @path          /admins/{adminId}
     * @allow create:  Only if there are no admins registered yet. This prevents further sign-ups.
     * @allow list:    Any client can check if the collection is empty.
     * @allow get:     Only an admin can get another admin's document.
     * @allow write:   Only an admin can modify documents (though not currently used).
     */
     match /admins/{adminId} {
        // This rule is temporarily opened to allow the first admin registration.
        // The client-side logic in login/page.tsx is responsible for checking if an admin already exists.
        allow create: if true;
        allow list: if true; 
        allow get: if isAdmin();
        allow write: if isAdmin();
    }

    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
