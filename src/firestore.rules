
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow get, list, update, delete: if isAdmin();
    }

    /**
     * @description Manages admin user records.
     * This is the simplest, most secure rule for a "first admin" scenario.
     * The logic in the client-side registration form is now the primary gatekeeper
     * before the write attempt is even made. This rule is the final backstop.
     */
     match /admins/{adminId} {
        // Allow a user to create their own admin doc, ONLY if the admins collection is empty.
        allow create: if request.auth.uid == adminId && size(get(/databases/$(database)/documents/admins).data) == 0;
        
        // Allow anyone to check if there are admins. This is safe and needed for the UI.
        allow list: if true;
        
        // Only other admins can read, update, or delete admin documents.
        allow get, update, delete: if isAdmin();
    }

    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}

    