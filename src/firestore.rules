
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      // Check if the user's UID exists in the admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    /**
     * @description Allows public read access to services. Allows admin write access.
     */
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Allows public read-only access to customer testimonials.
     */
    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores appointment data. Allows public creation. Admins can read, update, and delete.
     */
    match /appointments/{appointmentId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }

    /**
     * @description Manages admin user records.
     * Allows anyone to create the first admin record.
     * Subsequent reads/writes are restricted to existing admins.
     */
     match /admins/{adminId} {
        // Allow a signed-in user to create their own admin document,
        // ONLY if the admins collection is completely empty.
        // This ensures only the very first admin can be created.
        allow create: if isSignedIn() && request.auth.uid == adminId && size(get(/databases/$(database)/documents/admins, {"limit": 1})) == 0;

        // Allow anyone to check if there are admins (for UI purposes).
        // This is safe as it doesn't return document data.
        allow list: if true;

        // Only existing admins can read, update, or delete admin records.
        allow get, update, delete: if isAdmin();
    }


    /**
     * @description   Stores editable page content. Publicly readable, admin writable.
     */
    match /pages/{pageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description   Stores profiles of doctors/experts. Publicly readable, admin writable.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
